function validate(val){
 var validChars = "0123456789";
 var result = true;
 for (var x=0; x < val.length; x++) {
  var theChar = val.charAt(x);
  if (validChars.indexOf(theChar) == -1) {
   result = false;
   break;
  }
 }
 return result;
}
