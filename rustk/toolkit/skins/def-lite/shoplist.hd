function reHeight() {
 var Res	= document.getElementById('results').style;
 var Heit;
 Res.height	= "1000px";
 top.frames['fSide'+top.aId].scrollTo(0,1500);
 if(top.ISIE == 1) {
  Heit = document.documentElement.scrollTop;
  Res.height = 979 - Heit + "px";
  setTimeout('document.getElementById("results").style.height = 1000 - '+Heit+' + "px";',50);
  document.getElementById('restable').style.width = "94%";
  Res.overflowY = "auto";
  Res.overflowX = "hidden";
 } else {
  Heit = top.frames['fSide'+top.aId].pageYOffset;
  Res.height = 995 - Heit + "px";
 }
}
